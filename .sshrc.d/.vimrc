syntax on
set encoding=utf-8
set fileencoding=utf-8 fileformat=unix
set showmatch
set conceallevel=1
set incsearch
set hlsearch
set number
set autoindent
set smartindent cinwords=if,elif,else,for,while,try,finally,except,def,class
set tabstop=4 expandtab shiftwidth=4 softtabstop=4
set backspace=indent,eol,start

